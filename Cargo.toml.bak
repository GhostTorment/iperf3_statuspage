[package]
name = "iperf3_statuspage"
version = "0.1.7"
edition = "2024"
authors = ["Jak Bracegirdle <jak@bracegirdle.io>"]
description = "A utility application to serve iperf3 results over an HTTP endpoint."
license = "MIT OR Apache-2.0"
repository = "https://github.com/GhostTorment/iperf3_statuspage"
readme = "README.md"

[dependencies]
serde = { version = "1.0.219", features = ["derive"] }
actix-web = "4.10.2"
dotenvy = "0.15.7"
async-trait = "0.1.88"
once_cell = "1.21.3"
serde_json = "1.0.140"
tokio = { version = "1.44.2", features = ["full"] }
serial_test = "3.2.0"

[dev-dependencies]
criterion = "0.5"

[[bench]]
name = "cache_and_api"
harness = false
